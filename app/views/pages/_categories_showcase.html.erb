<section id="splashBox">
  <nav id="productsCategories">
    <ul>
      <% Category.all.each do |category| %>
        <li class="<%= cycle('odd', 'even') %>">
          <% if category.slug == @active_category %>
            <%= link_to category.name, '#', :class => 'active' %>
          <% else %>
            <%= link_to category.name, '#' %>
          <% end %>
        </li>
      <% end %>
      <li><%= link_to t('pages.home.categories.artists') %></li>
      <li class="even"><%= link_to image_tag('/images/promoCta_bg.png'), '#', :class => "cta",
                         :title => t('pages.home.categories.deals') %>
    </ul>
  </nav>
  <div id="bigPhotoContainer">
    <img src="/images/temp/bigPhoto.jpg" alt="">
    <div class="shadow"></div>
    <div id="descriptionBox">
      <div class="boxContent">
        <h3>Naklejki "Drzewa"</h3>
        <p>
            Lorem ipsum dolor sit, consectetur
            adipiscing elit. Phasellus vehicula,
            ligula eu tempor sollicitudin.
        </p>
        <%= link_to t('pages.home.categories.order'), '#', :class => "button cyan" %>
        <em class="sep">|</em>
        <%= link_to t('pages.home.categories.similar'), '#', :class => "purple" %>
      </div>
    </div>
    <%= link_to t('pages.home.categories.goto'), '#', :id => "goToCategory",
                :title => t('pages.home.categories.goto') %>
  </div>
</section>
