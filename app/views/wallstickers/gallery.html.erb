<div id="content"> 
  <h1 id="title">Decals by <%= @artist.username %></h1> 



  <% @wallstickers.each_slice(3) do |row| %>
    <div class="wallsticker_row"> 
      <% row.each do |wallsticker| %>
        <div class='wallsticker_container'> 
          <%= link_to wallsticker do %>
            <img src="<%= wallsticker.source_image_url %>" style="background-color:#666;" />
          <% end %>
          <p><%= link_to wallsticker.title, wallsticker %></p>
        </div> 
      <% end %>
    </div>
  <% end %>
</div> 

